<div class="meals-index">
  <% if @meals.present? %>
    <% @meals.each do |meal| %>
      <table>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= meal.name %></td>
          <td><%= link_to "Show", meal_path(meal) %></td>
          <td><%= link_to "Edit", edit_meal_path(meal) %></td>
        </tr>
      </table>
    <% end %>
  <% else %>
    No more meals exist gaybot. Create some.
  <% end %>

  <div>
    <%= link_to "Create new meal", new_meal_path %> 
  </div>
</div>