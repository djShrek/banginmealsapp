<h2>Your cart</h2>

<table class="carts">

  <%= render(@cart.order_meals) %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to "Checkout", new_order_path, method: :get %>
<%= button_to "Empty Cart", @cart, method: :delete, data: { confirm: "Art you sure?" } %>
